<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary_dark</item>
        <item name="colorOnSecondary">@color/color_on_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/color_primary_dark</item>
        <item name="backgroundColor">@color/colorBackground</item>
        <item name="radioButtonStyle">@style/radioButtonsStyle</item>
        <item name="chipStyle">@style/daysChipsStyle</item>
        <item name="textInputStyle">@style/wikipediaTextInputLayoutStyle</item>
    </style>

    <style name="equilateralImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/equilateral_layout_margin_top</item>
    </style>

    <style name="chipGroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/chip_group_margin_top</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="mainConstraintLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/main_constraint_layout_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/main_constraint_layout_padding_horizontal</item>
    </style>

    <style name="navigationViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/bottom_navigation_item_color</item>
        <item name="itemTextColor">@color/bottom_navigation_item_color</item>
        <item name="android:layout_marginStart">@dimen/bottom_navigation_view_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/bottom_navigation_view_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/bottom_navigation_view_margin_bottom</item>
        <item name="elevation">@dimen/bottom_navigation_view_elevation</item>
        <item name="itemBackground">@drawable/navigation_view_shape</item>
    </style>

    <style name="navigationViewStyle.mainNavigation">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginStart">@dimen/main_bottom_navigation_view_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/main_bottom_navigation_view_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/main_bottom_navigation_view_margin_bottom</item>
        <item name="itemIconTint">@color/items_color</item>
        <item name="itemTextColor">@color/items_color</item>
        <item name="itemBackground">@android:color/transparent</item>
    </style>

    <style name="fabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/color_on_primary</item>
        <item name="srcCompat">@drawable/ic_plus_fab</item>
        <item name="tint">@color/items_color</item>
    </style>

    <style name="bottomAppBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">@dimen/bottom_app_bar_margin_bottom</item>
        <item name="backgroundTint">@color/color_primary_dark</item>
        <item name="fabAlignmentMode">center</item>
        <item name="hideOnScroll">false</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="bottomSheetLineStyle">
        <item name="android:layout_width">@dimen/bottom_sheet_line_width</item>
        <item name="android:layout_height">@dimen/bottom_sheet_line_height</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_line_margin_top</item>
        <item name="android:background">@color/color_primary_dark</item>
    </style>

    <style name="settingsFragmentLineViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_fragment_line_view_layout_height</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="bottomSheetStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bottom_sheet_gradient</item>
        <item name="behavior_hideable">false</item>
        <item name="behavior_peekHeight">@dimen/bottom_sheet_peek_height</item>
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior
        </item>
    </style>

    <style name="bottomSheetTextLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/bottom_sheet_text_layout_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/bottom_sheet_text_layout_margin_horizontal</item>
        <item name="android:paddingEnd"> @dimen/bottom_sheet_description_text_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_text_layout_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/bottom_sheet_text_layout_margin_bottom</item>
        <item name="android:background">@drawable/bottom_sheet_text_shape</item>
    </style>

    <style name="bottomSheetDescriptionHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_description_header_margin_top</item>
        <item name="android:paddingStart"> @dimen/bottom_sheet_description_text_margin_horizontal</item>
        <item name="android:paddingEnd"> @dimen/bottom_sheet_description_text_margin_horizontal</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/bottom_sheet_description_header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
    </style>

    <style name="bottomSheetDescriptionTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_description_text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/bottom_sheet_description_text_margin_bottom</item>
        <item name="android:paddingStart">@dimen/bottom_sheet_description_text_margin_horizontal</item>
        <item name="android:paddingEnd">@dimen/bottom_sheet_description_text_margin_horizontal</item>
        <item name="android:textColor">@color/second_text_color</item>
        <item name="android:textSize">@dimen/bottom_sheet_description_text_size</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
    </style>

    <style name="bottomSheetDescriptionTextStyle.CMETime">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bottomSheetDescriptionHeaderStyle.setThemeHeaderViewStyle">
        <item name="android:layout_marginTop">@dimen/set_theme_header_view_margin_top</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="bottomSheetDescriptionHeaderStyle.notesHeaderStyle">
        <item name="android:layout_marginTop">@dimen/notes_header_margin_top</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/items_color</item>
    </style>

    <style name="bottomSheetDescriptionHeaderStyle.dateEarthText">
        <item name="android:layout_marginTop">@dimen/earth_date_text_margin_top</item>
        <item name="android:paddingStart">@dimen/earth_caption_text_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/earth_caption_text_padding_horizontal</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="bottomSheetDescriptionHeaderStyle.dateEarthText.dialogTitleStyle">
        <item name="android:layout_marginTop">@dimen/dialog_title_margin_top</item>
        <item name="android:paddingStart">@dimen/dialog_title_padding_start</item>
    </style>

    <style name="bottomSheetDescriptionTextStyle.earthCaptionTextStyle">
        <item name="android:layout_marginTop">@dimen/earth_caption_text_margin_top</item>
        <item name="android:paddingStart">@dimen/earth_caption_text_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/earth_caption_text_padding_horizontal</item>
    </style>

    <style name="sunRecyclerViewItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sun_item_margins</item>
        <item name="android:layout_marginStart">@dimen/sun_item_margins</item>
        <item name="android:layout_marginEnd">@dimen/sun_item_margins</item>
        <item name="android:paddingBottom">@dimen/sun_item_padding_bottom</item>
        <item name="android:background">@drawable/recycler_view_item_background</item>
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="earthRecyclerViewSeparationLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/earth_rv_separation_line_layout_height</item>
        <item name="android:layout_marginTop">@dimen/earth_rv_separation_line_margin_top</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="notesRecyclerViewItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/notes_item_margin_top</item>
        <item name="android:layout_marginStart">@dimen/notes_item_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/notes_item_margin_horizontal</item>
        <item name="android:background">@drawable/recycler_view_item_background</item>
    </style>

    <style name="bottomSheetDescriptionHeaderStyle.noteHeaderTextStyle">
        <item name="android:layout_marginTop">@dimen/note_body_text_margin_top</item>
        <item name="android:paddingStart">@dimen/note_body_text_padding</item>
        <item name="android:paddingEnd">@dimen/note_body_text_padding</item>
        <item name="android:textSize">@dimen/note_header_text_size</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="bottomSheetDescriptionTextStyle.noteBodyTextStyle">
        <item name="android:layout_marginTop">@dimen/earth_caption_text_margin_top</item>
        <item name="android:paddingStart">@dimen/note_body_text_padding</item>
        <item name="android:paddingEnd">@dimen/note_body_text_padding</item>
        <item name="android:paddingBottom">@dimen/note_body_text_padding</item>
        <item name="android:textSize">@dimen/note_body_text_size</item>
    </style>

    <style name="bottomSheetDescriptionTextStyle.noteDateStyle">
        <item name="android:layout_marginTop">@dimen/note_date_margin_top</item>
        <item name="android:paddingStart">@dimen/note_date_padding_start</item>
        <item name="android:paddingBottom">@dimen/note_date_padding</item>
        <item name="android:textSize">@dimen/note_date_text_size</item>
    </style>

    <style name="wikipediaTextInputLayoutStyle.dialogHeaderInputLayoutStyle">
        <item name="endIconCheckable">false</item>
        <item name="endIconDrawable">@null</item>
        <item name="counterMaxLength">30</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/note_dialog_text_input_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/note_dialog_text_input_margin_end</item>
        <item name="android:layout_marginTop">@dimen/note_dialog_text_input_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/note_dialog_text_input_margin_bottom</item>
    </style>

    <style name="wikipediaTextInputLayoutStyle.dialogHeaderInputLayoutStyle.dialogBodyInputLayoutStyle">
        <item name="counterEnabled">false</item>
        <item name="endIconMode">custom</item>
        <item name="android:layout_marginTop">@dimen/note_dialog_body_text_input_margin_top</item>
    </style>

    <style name="dialogOkButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dialog_ok_button_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/dialog_ok_button_margin_bottom</item>
        <item name="android:paddingStart">@dimen/dialog_ok_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/dialog_ok_button_padding_horizontal</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="dialogOkButtonStyle.dialogCancelButtonStyle">
        <item name="android:layout_marginEnd">@dimen/dialog_cancel_button_margin_end</item>
    </style>
</resources>